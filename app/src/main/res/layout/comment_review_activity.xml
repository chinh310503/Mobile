<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="8dp">

    <!-- Bài đánh giá đang được bình luận -->
    <LinearLayout
        android:id="@+id/layoutReviewPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#F7F7F7"
        android:elevation="2dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="4dp">

        <!-- Avatar, tên, thời gian, sao -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgReviewUserAvatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/default_avatar"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvReviewUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên người đánh giá"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvReviewTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian"
                    android:textSize="12sp"
                    android:textColor="#888888" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/reviewRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:isIndicator="true"
                style="?android:attr/ratingBarStyleSmall" />
        </LinearLayout>

        <!-- Nội dung đánh giá -->
        <TextView
            android:id="@+id/tvReviewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung bài đánh giá..."
            android:textColor="#333"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />

        <!-- Hiển thị nhiều ảnh -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerReviewImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginBottom="4dp"
            android:clipToPadding="false"
            android:overScrollMode="never" />

        <!-- Like và Comment -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconReviewLike"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_heart_outline"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvReviewLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="13sp" />

            <TextView
                android:text="   "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iconReviewComment"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_comment"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvReviewCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 bình luận"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Danh sách bình luận -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvComments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:overScrollMode="never" />

    <!-- Khung nhập bình luận -->
    <LinearLayout
        android:id="@+id/layoutCommentBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgCurrentUser"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_avatar"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/edtComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext"
            android:hint="Nhập bình luận..."
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send"
            android:contentDescription="Gửi"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />
    </LinearLayout>
</LinearLayout>
